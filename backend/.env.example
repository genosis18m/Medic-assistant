# LLM Configuration (Groq - Free Tier)
GROQ_API_KEY=your_groq_api_key

# Database Configuration (PostgreSQL)
# For local: postgresql://postgres:password@localhost:5432/medical_db
# For production: use your hosted PostgreSQL URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/medical_db

# Google Cloud APIs (for Calendar & Gmail)
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_ID=primary

# Email Service (Gmail SMTP)
# For Gmail, use App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
EMAIL_FROM_NAME=Medical Assistant

# Slack Integration (for Doctor Notifications)
# Create a Slack App and get Webhook URL: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Optional: OpenAI as alternative LLM
# OPENAI_API_KEY=your_openai_api_key
